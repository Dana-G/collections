%h1 Create Album
#new-album
  = form_for ([@album.user, @album]) do |f|
    - if @album.errors.any?
      .error-messages
        %h2 Form is invalid
        %ul
          - @album.errors.full_messages.each do |message|
            %li= message

    .field
      = f.label :name
      = f.text_field :name

    .field
      = f.label :image, 'add image'
      = f.file_field :image

    .actions
      = f.submit 'submit'
